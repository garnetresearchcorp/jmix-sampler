<window xmlns="http://jmix.io/schema/ui/window">
    <layout>
        <hbox height="100%"
              spacing="true"
              width="100%">
            <groupBox caption="msg://io.jmix.sampler.screen.ui.components.browserframe/programmaticalyDefinedSource"
                      height="100%">
                <browserFrame id="programmaticBrowserFrame"
                              height="100%"
                              width="100%"/>
            </groupBox>
            <groupBox caption="msg://io.jmix.sampler.screen.ui.components.browserframe/declarativelyDefinedSource"
                      height="100%">
                <browserFrame id="declarativeBrowserFrame"
                              height="100%"
                              width="100%">
                    <resource>
                        <theme path="files/browserframe-theme.html"/>
                    </resource>
                </browserFrame>
            </groupBox>
        </hbox>
    </layout>
</window>
