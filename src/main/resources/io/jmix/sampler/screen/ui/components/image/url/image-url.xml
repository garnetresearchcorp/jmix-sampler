        <hbox spacing="true">
            <groupBox caption="msg://io.jmix.sampler.screen.ui.components.image/programmaticalyDefinedSource"
                      height="200px"
                      width="370px">
                <image id="programmaticImage"
                       align="MIDDLE_CENTER"
                       scaleMode="SCALE_DOWN"
                       width="100%"
                       height="100%"/>
