                       align="MIDDLE_CENTER"
                       scaleMode="SCALE_DOWN"
                       width="100%"
                       height="100%">
                    <resource>
                        <url url="https://www.jmix.io/uploads/framework_image_9efadbc372.svg"/>
                    </resource>
                </image>
            </groupBox>
        </hbox>
    </layout>
</window>
