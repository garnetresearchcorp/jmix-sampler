<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <instance id="customerDc"
                  class="io.jmix.sampler.entity.Customer"
                  fetchPlan="_local"/>
    </data>
    <layout spacing="true">
        <checkBox caption="CheckBox connected to a container"
                  dataContainer="customerDc"
                  property="active"/>
        <hbox spacing="true">
            <label value="Value in the container:"/>
            <label id="labelValue" dataContainer="customerDc"
                   property="active"/>
        </hbox>
    </layout>
</window>
