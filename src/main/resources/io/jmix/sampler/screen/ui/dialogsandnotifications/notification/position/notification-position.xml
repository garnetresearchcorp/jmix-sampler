<window xmlns="http://jmix.io/schema/ui/window">
    <layout>
        <gridLayout spacing="true">
            <columns count="3"/>
            <rows>
                <row>
                    <button id="defaultBtn"
                            align="MIDDLE_CENTER"
                            caption="Default"
                            colspan="3"
                            width="128px"/>
                </row>
                <row>
                    <button id="topLeft"
                            caption="Top left"
                            width="128px"/>
                    <button id="topCenter"
                            caption="Top center"
                            width="128px"/>
                    <button id="topRight"
                            caption="Top right"
                            width="128px"/>
                </row>
                <row>
                    <button id="middleLeft"
                            caption="Middle left"
                            width="128px"/>
                    <button id="middleCenter"
                            caption="Middle center"
                            width="128px"/>
                    <button id="middleRight"
                            caption="Middle right"
                            width="128px"/>
                </row>
                <row>
                    <button id="bottomLeft"
                            caption="Bottom left"
                            width="128px"/>
                    <button id="bottomCenter"
                            caption="Bottom center"
                            width="128px"/>
                    <button id="bottomRight"
                            caption="Bottom right"
                            width="128px"/>
                </row>
            </rows>
        </gridLayout>
    </layout>
</window>
