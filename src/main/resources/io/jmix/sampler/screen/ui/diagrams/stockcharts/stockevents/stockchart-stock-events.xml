<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:chart="http://jmix.io/schema/ui/charts">
    <data>
        <collection id="stockChartDc"
                    class="io.jmix.sampler.entity.DateValueVolume"/>
    </data>
    <layout>
        <chart:stockChart id="stockChart"
                          height="100%"
                          width="100%">
            <chart:dataSets>
                <chart:dataSet id="dataSet"
                               categoryField="date"
                               color="#b0de09"
                               dataContainer="stockChartDc">
                    <chart:fieldMappings>
                        <chart:fieldMapping fromField="value"
                                            toField="value"/>
                        <chart:fieldMapping fromField="volume"
                                            toField="volume"/>
                    </chart:fieldMappings>
                    <chart:stockEvents>
                        <chart:stockEvent backgroundColor="#85CDE6"
                                          date="2014-09-19"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="S"
                                          type="SIGN"/>
                        <chart:stockEvent backgroundAlpha="0.5"
                                          backgroundColor="#FFFFFF"
                                          date="2014-11-19"
                                          description="Some longer&lt;br&gt;text can also be added"
                                          graph="stockGraph"
                                          text="F"
                                          type="FLAG"/>
                        <chart:stockEvent backgroundColor="#85CDE6"
                                          date="2014-12-10"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          showOnAxis="true"
                                          text="X"
                                          type="PIN"/>
                        <chart:stockEvent backgroundColor="#85CDE6"
                                          date="2014-12-26"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          showOnAxis="true"
                                          text="Z"
                                          type="PIN"/>
                        <chart:stockEvent backgroundColor="#85CDE6"
                                          date="2015-01-03"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="U"
                                          type="SIGN"/>
                        <chart:stockEvent date="2015-02-06"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="D"
                                          type="SIGN"/>
                        <chart:stockEvent date="2015-04-05"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="L"
                                          type="SIGN"/>
                        <chart:stockEvent date="2015-04-05"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="R"
                                          type="SIGN"/>
                        <chart:stockEvent backgroundColor="#00CC00"
                                          date="2015-06-15"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          type="ARROW_UP"/>
                        <chart:stockEvent backgroundColor="#CC0000"
                                          date="2015-07-25"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          type="ARROW_DOWN"/>
                        <chart:stockEvent date="2015-09-01"
                                          description="This is description of an event"
                                          graph="stockGraph"
                                          text="Longer text can&lt;br&gt;also be displayed"
                                          type="TEXT"/>
                    </chart:stockEvents>
                </chart:dataSet>
            </chart:dataSets>
            <chart:panels>
                <chart:panel percentHeight="70"
                             title="Value">
                    <chart:stockGraphs>
                        <chart:stockGraph id="stockGraph"
                                          valueField="value"/>
                    </chart:stockGraphs>
                    <chart:stockLegend markerType="NONE"
                                       valueTextRegular=" "/>
                </chart:panel>
            </chart:panels>
            <chart:chartScrollbarSettings graph="stockGraph"/>
            <chart:chartCursorSettings cursorAlpha="0.1"
                                       fullWidth="true"
                                       valueBalloonsEnabled="true"
                                       valueLineAlpha="0.5"
                                       valueLineBalloonEnabled="true"
                                       valueLineEnabled="true"/>
            <chart:periodSelector>
                <chart:periods>
                    <chart:period count="10"
                                  label="10 days"
                                  period="DAYS"/>
                    <chart:period count="1"
                                  label="1 month"
                                  period="MONTHS"/>
                    <chart:period count="1"
                                  label="1 year"
                                  period="YEARS"/>
                    <chart:period label="YTD"
                                  period="YTD"/>
                    <chart:period label="MAX"
                                  period="MAX"/>
                </chart:periods>
            </chart:periodSelector>
            <chart:panelsSettings usePrefixes="true"/>
            <chart:export/>
        </chart:stockChart>
    </layout>
</window>
