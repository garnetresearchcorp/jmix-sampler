<window xmlns="http://jmix.io/schema/ui/window">
    <data>
        <collection id="orderItemsDc"
                    class="io.jmix.sampler.entity.OrderItem">
            <fetchPlan extends="_local"/>
            <loader id="orderItemsDl">
                <query>
                    <![CDATA[select e from sampler_OrderItem e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="rightLeft"
            spacing="true">
        <hbox id="bottomTop"
              spacing="true"
              width="700px">
            <tagPicker caption="msg://tagPicker.caption.bottom"
                       optionsContainer="orderItemsDc"
                       width="100%"/>
            <tagPicker caption="msg://tagPicker.caption.top"
                       optionsContainer="orderItemsDc"
                       tagPosition="TOP"
                       width="100%"/>
        </hbox>
        <hbox id="rightLeft"
              spacing="true"
              width="700px">
            <tagPicker caption="msg://tagPicker.caption.left"
                       optionsContainer="orderItemsDc"
                       tagPosition="LEFT"
                       width="100%"/>
            <tagPicker caption="msg://tagPicker.caption.right"
                       optionsContainer="orderItemsDc"
                       tagPosition="RIGHT"
                       width="100%"/>
        </hbox>
    </layout>
</window>